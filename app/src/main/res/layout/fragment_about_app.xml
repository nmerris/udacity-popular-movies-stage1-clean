<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_about_app_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/fragment_aboutapp_usage_notes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_app_heading_text_size"
            android:text="@string/about_app_usage_notes_title" />

        <TextView
            android:id="@+id/fragment_aboutapp_usage_notes_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_app_content_text_size"
            android:paddingBottom="@dimen/about_app_content_padding_bottom"
            android:text="@string/about_app_usage_notes_content" />

        <TextView
            android:id="@+id/fragment_aboutapp_about_author_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_app_heading_text_size"
            android:text="@string/about_app_about_author_technotes_title" />

        <TextView
            android:id="@+id/fragment_aboutapp_about_author_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_app_content_text_size"
            android:paddingBottom="@dimen/about_app_content_padding_bottom"
            android:text="@string/about_app_about_author_content" />

        <TextView
            android:id="@+id/fragment_aboutapp_moviedb_attribution_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_app_content_text_size"
            android:paddingTop="@dimen/about_app_moviedb_attribution_padding_top"
            android:text="@string/about_app_moviedb_attribution_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_aboutapp_moviedb_logo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:src="@drawable/moviedb_logo"
                android:scaleType="centerInside"
                android:layout_gravity="bottom|center_horizontal" />

        </FrameLayout>

    </LinearLayout>
</ScrollView>
